#include<iostream.h>
#include<conio.h>
class stud
{
int marks,age;
char name[20];
public:
void getdata();
void putdata();
}m;
void stud::getdata()
{
cout<<"\n Enter the name : ";
cin>>name;
cout<<"\n Enter the age : ";
cin>>age;
cout<<"\n Enter the marks : ";
cin>>marks;
}
void stud::putdata()
{
cout<<"\n Entered name is "<<name;
cout<<"\n Entered age is "<<age;
cout<<"\n Entered marks is "<<marks;
}
void main()
{
cout<<"\n Enter the sutdent details separated by space : ";
m.getdata();
cout<<"\n The entered student details are : ";
m.putdata();
getch();
}
