#include<stdio.h>
#include<conio.h>
void swap(int *a,int *b);
void main()
{
int a=5,b=7;
clrscr();
printf("******************PROGRAM TO TO SHOW THE FUNCTION OF POINTERS*******************");
printf("\n\n -> The value of a is %d\n\n ",a);
printf("-> The value of b is %d\n\n ",b);
swap(&a,&b);
printf("-> The value of a after swapping is %d\n\n ",a);
printf("-> The value of b after swapping is %d\n\n ",b);
getch();
}
void swap(int *a,int *b)
{
int *temp;
*temp=*a;
*a=*b;
*b=*temp;
printf("-> The value of swapped a is %d\n\n ",*a);
printf("-> The value of swapped b is %d\n\n ",*b);
}
